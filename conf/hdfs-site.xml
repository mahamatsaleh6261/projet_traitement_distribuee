<?xml version="1.0"?>
<configuration>
    <!-- Configure the directories for NameNode storage -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/hadoop/dfs/name</value>
    </property>

    <!-- Configure the directories for DataNode storage -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/hadoop/dfs/data</value>
    </property>
    
    <!-- Configure the directories for Secondary NameNode storage -->
    <property>
        <name>fs.checkpoint.dir</name>
        <value>/hadoop/dfs/secondary</value>
    </property>

    <property>
        <name>fs.checkpoint.edits.dir</name>
        <value>/hadoop/dfs/secondary/edits</value>
    </property>

    <!-- Configure the HTTP address for the Secondary NameNode -->
    <property>
        <name>dfs.secondary.http-address</name>
        <value>secondary-namenode:50090</value>
    </property>
</configuration>
